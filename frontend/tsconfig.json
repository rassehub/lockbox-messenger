{
  // Inline tsconfig to avoid referencing a missing package config
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src", "index.js", "index.ts", "index.tsx", "__tests__/e2e", "__tests__/integration", "__tests__/unit"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
